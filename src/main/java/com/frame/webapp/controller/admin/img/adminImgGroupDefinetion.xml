<?xml version="1.0" encoding="UTF-8"?>
<pageDefinition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../core/query/xml/definition/pageDefinition.xsd">
	<queryDefinition showIndex="序号">
		<mappedClass mappedClass="com.frame.entity.media.ImgGroupEntity" alias="m">
			<!-- <join type="LEFT" field="parent" as="p" /> -->
		</mappedClass>
		<mappedClass mappedClass="com.frame.core.entity.UserEntity" alias="u">
			<!-- <join type="LEFT" field="parent" as="p" /> -->
		</mappedClass>
		<where>u.id=m.createUserKey</where>
		<sort>
			<by field="id" fromAlias="m" order="ASC"></by>
		</sort>

		<columns>
			<column header="ID" field="id" fromAlias="m" width="10%" sortable="true" hidden="false"></column>
			<column header="创建 人" field="nickName" fromAlias="u" width="20%" sortable="true" hidden="false"></column>
			<column header="相册名称" field="imgGroupName" fromAlias="m" width="20%" sortable="false" hidden="false"></column>
			<column header="创建日期" field="createDateTime" fromAlias="m" width="20%" sortable="true" hidden="false"></column>
			<!-- <column header="操作" width="10%" sortable="false" hidden="false" staticColumnData="删除"></column> -->
		</columns>
		<searchDefinition>
			<condition alias="m" field="id" operator="=" displayText="ID" inputType="NUMBER"></condition>
			<condition alias="m" field="createUserKey" operator="LIKE" displayText="创建 人" inputType="SELECT" selectTextField="nickName" selectValueField="id" optionClass="com.frame.core.entity.UserEntity"></condition>
			<condition alias="m" field="createDateTime" operator="&gt;" displayText="创建日期" inputType="DATEBOX"></condition>
			<condition alias="m" field="createDateTime" operator="&lt;" displayText="至" inputType="DATEBOX"></condition>
			<condition alias="m" field="imgGroupName" operator="LIKE" displayText="相册名称" inputType="TEXT"></condition><!-- selectTextField="createUserKey" inputType="SELECT" -->
		</searchDefinition>
		<pageSize>10</pageSize>
		<js>
			<path>/resources/layer-v3.0.3/layer/layer.js</path>
			<path>/resources/js/img/img-group-list.js</path>
		</js>
		<!-- <css><path>/a/b/c</path></css> -->
	</queryDefinition>
	<delete beforeDelete="beforeDelete"></delete>
	<manage beforeManage="beforeUpdate">
		<field field="imgGroupName" displayText="相册名称"></field>
	</manage>
</pageDefinition>